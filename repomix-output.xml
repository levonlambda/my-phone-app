          sortOrder: 2,
          dateCreated: Timestamp.now()
        };
        
        const paymentLedgerDocRef = doc(collection(db, 'supplier_ledger'));
        transaction.set(paymentLedgerDocRef, paymentLedgerEntry);
      }
      
      return { procurementId };
    });
    
    return {
      success: true,
      procurementId: result.procurementId,
